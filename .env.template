# Finnhub API Configuration
# Get your free API key at: https://finnhub.io/register
# Used for: Fundamentals, real-time quotes, company profiles, news
FINNHUB_API_KEY=your_finnhub_api_key_here

# Twelve Data API Configuration
# Get your free API key at: https://twelvedata.com/register
# Used for: Historical price charts (OHLCV data)
# Free tier: 800 API calls per day
TWELVEDATA_API_KEY=your_twelvedata_api_key_here

# Optional: Toggle between Finnhub and yfinance for testing
# Set to 'true' to use Finnhub (recommended), 'false' to use yfinance
USE_FINNHUB=true

# Optional: Cache configuration
# How long to cache ticker objects in hours
TICKER_CACHE_TTL_HOURS=1

# Optional: Rate limiting configuration
# Finnhub free tier limits: 60 calls/minute, 30 calls/second
RATE_LIMIT_CALLS_PER_MINUTE=60
RATE_LIMIT_CALLS_PER_SECOND=30
